<div id="<%= dom_id event %>" class="col-md-6">
  <div class="card h-100 shadow border-0">
    <h3 class="card-header text-uppercase"><%= event.title %></h3>

    <% if event.photo.attached? %>
      <div class="card-body p-0">
        <%= image_tag event.photo, class: "img-fluid w-100", alt: event.title %>
      </div>
    <% else %>
      <div class="card-body text-center text-muted fst-italic">
        Aucune photo disponible
      </div>
    <% end %>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Lieu :</strong> <%= event.location %></li>
      <li class="list-group-item"><strong>Date :</strong> <%= l(event.start_date, format: :long) %></li>
      <li class="list-group-item"><strong>Participants :</strong> <%= event.attendances.count %></li>
      <li class="list-group-item"><strong>Description :</strong> <%= truncate(event.description, length: 150) %></li>
      <li class="list-group-item"><strong>Prix :</strong> <%= number_to_currency(event.price, unit: "€", separator: ",", delimiter: " ") %></li>
      <li class="list-group-item"><strong>Organisateur :</strong> <%= event.admin.email %></li>
    </ul>

    <div class="card-body text-center">
      <%= link_to "Voir plus", event_path(event), class: "btn btn-primary" %>
    </div>

    <div class="card-footer text-muted text-end">
      Mis à jour <%= time_ago_in_words(event.updated_at) %> ago
    </div>
  </div>
</div>