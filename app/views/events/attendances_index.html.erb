<div class="container py-5">
  <div class="text-center mb-5">
    <h2 class="text-uppercase fw-bold">Participants à <%= @event.title %></h2>
  </div>

  <% if @event.participants.any? %>
    <div class="mb-4">
      <h3 class="fw-semibold">Liste des participants :</h3>
      <ul class="list-group list-group-flush">
        <% @event.participants.each do |participant| %>
          <li class="list-group-item">
            <strong><%= participant.full_name %></strong> – <%= participant.email %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p class="text-muted fst-italic">Aucun participant pour le moment.</p>
  <% end %>

  <div class="d-flex flex-wrap gap-3 mt-4">
    <%= link_to "Modifier l'événement", edit_event_path(@event), class: "btn btn-outline-secondary" %>
    <%= button_to "Supprimer l'événement", @event, method: :delete, data: { confirm: "Tu es sûr ?" }, class: "btn btn-danger" %>
    <%= link_to "Retour à l'événement", event_path(@event), class: "btn btn-primary" %>
  </div>
</div>